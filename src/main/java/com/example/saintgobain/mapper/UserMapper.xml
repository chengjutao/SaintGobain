<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.example.saintgobain.mapper.UserMapper">

	<!-- 查询账号是否存在 -->
	<select id="verifyAccount"
		parameterType="com.example.saintgobain.entity.DB_User"
		resultType="java.util.Map">
		SELECT * FROM USER WHERE account = #{account}
	</select>

	<!-- 修改token登录信息 -->
	<update id="updLoginToken"
		parameterType="com.example.saintgobain.entity.DB_User">
		UPDATE USER SET
		token = #{token}
		WHERE id = #{id}
	</update>
	<!-- 查询账号密码是否正确 -->
	<select id="verifyAccountPassword"
		parameterType="com.example.saintgobain.entity.DB_User" resultType="com.example.saintgobain.entity.DB_User">
		SELECT id,account,password,token FROM USER WHERE account = #{account} AND password = #{password}
	</select>

</mapper>